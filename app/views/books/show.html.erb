

<main>
 
  <div class="container">  <!-- この行を追加 -->
    <div class="row">      <!-- この行を追加 -->
      <div class="col-md-3">

　　　<div>
  <%= flash[:notice] %>
　</div>
　<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
　<% end %>


        <h1>User Info</h1>
        
         <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
           <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th><%=@user.introduction%></th>
          <th></th>
          </tr>
          </tbody>
          </table>
         
          
          <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        
          <% end %>
        
        
        <!-- ユーザーの投稿一覧 -->
        <%#= render 'post_images/list', post_images: @post_images %>
        
              <h2>New book</h2>
         
        <!-- form_with部分 -->
        <%= form_with model: @books do |f| %>
          
        
          <div class="form-group">
           <label for="book_title">Title</label>
           <%= f.text_field :title,class:"form-control title" %>
          </div>
         
          
          <div class="form-group">
    　　　　　　<label for="book_opinion">Opinion</label>
    　　    <%= f.text_area :body,class:"form-control body" %>
  　　　　　　</div>
        
          <%#= f.submit '投稿' %>
        
        
        <div class="form-group">
　    　　 <%= f.submit "Create Book",class:"btn btn-success createbook" %>
    　　　</div>
        
        
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">  <!-- この行を追加 -->
        <h1>Book detail</h1>
        
        
        <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
              <br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
          
            <td><%= link_to @book.title, book_path(@book.id)  %></td>
            <td><%= @book.body %></td>
             <% if @book.user == current_user %>
             
             <td><%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-sm btn-success edit_book" %></td>
            
            
             <td><%= link_to "Destroy",destroy_book_path(@book.id) , method: :delete, class:"btn btn-sm btn-danger destroy_book","data-confirm" => "本当に削除しますか？"%></td>
           
            <% end %>
          </tr>
        </tbody>
        </table>
      </div>
    </div> 
  </div>   
</main>
  
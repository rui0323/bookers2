<main>
 <p id="notice"><%= notice %></p>
  <div class="container">  <!-- この行を追加 -->
    <div class="row">      <!-- この行を追加 -->
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>


<h1>User info</h1>
     
     <% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
     
      <div class="form-group">
      <label for="user_name">Name</label>
      <%= f.text_field :name,class:"form-control name" %>
      </div>
      
      
       <div class="form-group">
      <label for="user_image">Image</label>
      <%= f.file_field :profile_image,class:"form-control-file user_image", placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      
       <div class="form-group">
      <label for="user_introduction">OpinionOpinion</label>
      <%= f.text_area :introduction,class:"form-control introduction" %>
      </div>
      
       <div class="form-group">
       <%= f.submit "Update User",class:"btn btn-secondary" %>
       </div>


      <% end %>
    </div>  
  </div>
  </main>
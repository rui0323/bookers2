<main>
  <p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">  <!-- この行を追加 -->
    <div class="row">      <!-- この行を追加 -->
      <div class="col-md-3">

        <h1>User Info</h1>


          <%= image_tag @user.get_profile_image(100,100)%>
          <table class="table">
          <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th><%=@user.introduction%></th>
          </tr>
          </tbody>
          </table>
          
          
          
          
          <div class="row"> 
         <% if @user ==  current_user %>
          <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
          <% end %>

        <!-- ユーザーの投稿一覧 -->
        <%#= render 'post_images/list', post_images: @post_images %>

              <h2>New book</h2>

        <!-- form_with部分 -->
        <%= form_with model: @book do |f| %>


          <div class="form-group">
           <label for="book_title">Title</label>
           <%= f.text_field :title,class:"form-control title" %>
          </div>

         <div class="form-group">
    　　　　　　<label for="book_opinion">Opinion</label>
    　　    <%= f.text_area :body,class:"form-control body" %>
  　      </div>

          <%#= f.submit '投稿' %>


          <div class="form-group">
　    　　 <%= f.submit "Create Book",class:"btn btn-success createbook" %>
    　      </div>

         </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">  <!-- この行を追加 -->
        <h1>Users</h1>


        <table class="table table-hover table-inverse">

        <thead>
            <tr>

              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
        </thead>
              <%#= image_tag book.get_image %>

        <tbody>
           <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to"Show",user_path(user.id) %></td>
          </tr>
          <% end%>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
